<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
    http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">


	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
	</application>


	<managed-bean>
		<managed-bean-name>userLogin</managed-bean-name>
		<managed-bean-class>pl.edu.agh.cyberwej.web.beans.logging.AddUserBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>service</property-name>
			<value>#{userService}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>loggingBean</managed-bean-name>
		<managed-bean-class>pl.edu.agh.cyberwej.web.beans.logging.LoggingBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>service</property-name>
			<value>#{userService}</value>
		</managed-property>
		<managed-property>
			<property-name>sessionContextBean</property-name>
			<value>#{sessionContextBean}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>createUserBean</managed-bean-name>
		<managed-bean-class>pl.edu.agh.cyberwej.web.beans.logging.CreateUserBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>service</property-name>
			<value>#{userService}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>searchForUserBean</managed-bean-name>
		<managed-bean-class>pl.edu.agh.cyberwej.web.beans.group.SearchForUserBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>service</property-name>
			<value>#{userService}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>addGroupBean</managed-bean-name>
		<managed-bean-class>pl.edu.agh.cyberwej.web.beans.group.AddGroupBean</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
		<managed-property>
			<property-name>userService</property-name>
			<value>#{userService}</value>
		</managed-property>
		<managed-property>
			<property-name>groupService</property-name>
			<value>#{groupService}</value>
		</managed-property>
		<managed-property>
			<property-name>sessionContextBean</property-name>
			<value>#{sessionContextBean}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>notificationBean</managed-bean-name>
		<managed-bean-class>pl.edu.agh.cyberwej.web.beans.views.user.NotificationBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>invitationService</property-name>
			<value>#{invitationService}</value>
		</managed-property>
		<managed-property>
			<property-name>sessionContextBean</property-name>
			<value>#{sessionContextBean}</value>
		</managed-property>
	</managed-bean>

	<navigation-rule>
		<navigation-case>
			<from-outcome>main</from-outcome>
			<to-view-id>pages/mainPage.xhtml</to-view-id>
			<redirect />
		</navigation-case>

		<navigation-case>
			<from-outcome>add_group</from-outcome>
			<to-view-id>pages/addGroupPage.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>register_payment</from-outcome>
			<to-view-id>pages/registerPaymentPage.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>registerPayment_secondStep</from-outcome>
			<to-view-id>pages/registerPaymentStep2Page.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>register_payback</from-outcome>
			<to-view-id>pages/registerPaybackPage.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>logging</from-outcome>
			<to-view-id>pages/loggingPage.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>user_page</from-outcome>
			<to-view-id>pages/userPage.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>groupPage</from-outcome>
			<to-view-id>pages/groupPage.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>payment_page</from-outcome>
			<to-view-id>pages/paymentPage.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>payment_page_redirect</from-outcome>
			<to-view-id>pages/paymentPage.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>registerPaymentPageStep3</from-outcome>
			<to-view-id>pages/registerPaymentStep3Page.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>registerPaymentSummary</from-outcome>
			<to-view-id>pages/registerPaymentSummaryPage.xhtml</to-view-id>
			<redirect />
		</navigation-case>

		<navigation-case>
			<from-outcome>createUser</from-outcome>
			<to-view-id>pages/createUserPage.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>addGroupSummary</from-outcome>
			<to-view-id>pages/addGroupSummaryPage.xhtml</to-view-id>
		</navigation-case>

		<navigation-case>
			<from-outcome>add_payment_items</from-outcome>
			<to-view-id>pages/addPaymentItemsPage.xhtml</to-view-id>
			<!-- <redirect /> -->
		</navigation-case>

		<navigation-case>
			<from-outcome>searchForUser</from-outcome>
			<to-view-id>pages/searchForUser.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>